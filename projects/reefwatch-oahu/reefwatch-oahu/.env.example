# ReefWatch Oahu - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Google Cloud Platform
# ===========================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
BIGQUERY_DATASET=reefwatch

# Path to GCP service account key (for local development)
# In production, use Cloud Run's automatic service account
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# ===========================================
# API Keys
# ===========================================
# Anthropic Claude API Key
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Mapbox API Token
# Get one at: https://account.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1...

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# Cache Settings
# ===========================================
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# ===========================================
# AI Chat Settings
# ===========================================
CHAT_MODEL=claude-sonnet-4-20250514
CHAT_MAX_TOKENS=1024
CHAT_TEMPERATURE=0.7

# ===========================================
# CORS Settings (comma-separated origins)
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
